<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="0.5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:transitionName="staffImage"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:id="@+id/staff_image">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:gravity="start"
            android:textStyle="bold"
            android:id="@+id/staff_member_name"
            android:layout_marginStart="10dp"
            android:text="@string/staff_member_name"
            android:layout_toEndOf="@id/staff_image"
            android:layout_marginTop="10dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_below="@id/staff_member_name"
            android:id="@+id/staff_member_team"
            android:layout_marginStart="10dp"
            android:text="@string/staff_member_team"
            android:layout_toEndOf="@id/staff_image">

        </TextView>




    </RelativeLayout>

</androidx.cardview.widget.CardView>